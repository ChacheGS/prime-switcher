pkgname=prime-switcher

post_install() {
  gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
  prime-switcher -D -s power-saving
  echo "Reboot is required to apply changes"
}

pre_remove() {
  prime-switcher --uninstall
}

post_remove() {
  gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
}
